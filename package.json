{
  "name": "portafolio",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://rmaafs.com",
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "react": "^16.14.0",
    "react-animate-on-scroll": "^2.1.9",
    "react-dom": "^19.2.4",
    "react-fade-in": "^2.0.1",
    "react-loadingg": "^1.7.2",
    "tippy.js": "^6.3.7",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "sintax:test": "prettier --check \"{,!(node_modules)/**/}*.(jsx|css)\"",
    "sintax:fix": "prettier --check --write \"{,!(node_modules)/**/}*.(jsx|css)\"",
    "lint": "eslint . --ext .jsx",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --transformIgnorePatterns 'node_modules/(?!(<your-package-goes-here>)/)'",
    "eject": "react-scripts eject",
    "predeploy": "npm run mytest && npm run build",
    "deploy": "npm run mytest && gh-pages -d build",
    "check": "npm run sintax:test && npm run lint && jest"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-private-property-in-object": "^7.28.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^8.57.1",
    "eslint-plugin-switch-error-warn": "^1.0.0",
    "gh-pages": "^6.3.0",
    "prettier": "^3.8.1",
    "react-scripts": "^5.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov",
      "cobertura"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "nth-check": "^2.0.1",
    "postcss": "^8.4.31",
    "jsonpath": "npm:jsonpath-plus@^10.0.0"
  }
}
